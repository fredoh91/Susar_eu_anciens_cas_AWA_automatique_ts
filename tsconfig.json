{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "ES2021",
        "allowSyntheticDefaultImports": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "isolatedModules": true,
        "esModuleInterop": true,
        // "allowImportingTsExtensions": true,
        // "noEmit": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "tests",
      "**/*.test.ts",
      "src/test.ts",
      "src/utils.ts"
    ]
}